<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AdminSelfInfoActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/admin_slef_info_back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_back_black"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="个人信息"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/admin_self_info_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:text="修改"
            android:textSize="16dp"
            android:textColor="#03A9F4"/>
    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="1dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/admin_self_info_headicon_root1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp">

                            <!--item中间部分的文字-->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                android:text="头像"
                                android:textColor="#000000"/>

                            <!--item右边的文字-->
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/admin_self_info_headicon"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />

                            <!--item右边的Icon 默认是向右的箭头-->
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/homepage_right_arrow" />
                        </LinearLayout>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:background="#E0E0E0" />
                        <LinearLayout
                            android:id="@+id/admin_self_info_acount_root1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp">

                            <!--item中间部分的文字-->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                android:text="账号"
                                android:textColor="#000000"/>

                            <!--item右边的文字-->
                            <TextView
                                android:id="@+id/admin_self_info_acount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="账号"/>

                            <!--item右边的Icon 默认是向右的箭头-->
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/homepage_right_arrow" />
                        </LinearLayout>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:background="#E0E0E0" />
                        <LinearLayout
                            android:id="@+id/admin_self_info_name_root1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp">

                            <!--item中间部分的文字-->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                android:text="姓名"
                                android:textColor="#000000"/>

                            <!--item右边的文字-->
                            <TextView
                                android:id="@+id/admin_self_info_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="姓名"/>

                            <!--item右边的Icon 默认是向右的箭头-->
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/homepage_right_arrow" />
                        </LinearLayout>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:background="#E0E0E0" />
                        <LinearLayout
                            android:id="@+id/admin_self_info_sex_root1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp">

                            <!--item中间部分的文字-->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                android:text="性别"
                                android:textColor="#000000"/>

                            <!--item右边的文字-->
                            <TextView
                                android:id="@+id/admin_self_info_sex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="性别"/>

                            <!--item右边的Icon 默认是向右的箭头-->
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/homepage_right_arrow" />
                        </LinearLayout>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:background="#E0E0E0" />
                        <LinearLayout
                            android:id="@+id/admin_self_info_age_root1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp">

                            <!--item中间部分的文字-->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                android:text="年龄"
                                android:textColor="#000000"/>

                            <!--item右边的文字-->
                            <TextView
                                android:id="@+id/admin_self_info_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="年龄"/>

                            <!--item右边的Icon 默认是向右的箭头-->
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/homepage_right_arrow" />
                        </LinearLayout>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:background="#E0E0E0" />
                        <LinearLayout
                            android:id="@+id/admin_self_info_workyear_root1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp">

                            <!--item中间部分的文字-->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                android:text="工作时长"
                                android:textColor="#000000"/>

                            <!--item右边的文字-->
                            <TextView
                                android:id="@+id/admin_self_info_workyear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="工作时长"/>

                            <!--item右边的Icon 默认是向右的箭头-->
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/homepage_right_arrow" />
                        </LinearLayout>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:background="#E0E0E0" />
                        <LinearLayout
                            android:id="@+id/admin_self_info_phone_root1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp">

                            <!--item中间部分的文字-->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                android:text="联系电话"
                                android:textColor="#000000"/>

                            <!--item右边的文字-->
                            <TextView
                                android:id="@+id/admin_self_info_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="联系电话"/>

                            <!--item右边的Icon 默认是向右的箭头-->
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/homepage_right_arrow" />
                        </LinearLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="1dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/admin_self_info_introduction_root1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp">

                            <!--item中间部分的文字-->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                android:text="个人简介"
                                android:textColor="#000000"/>

                            <!--item右边的Icon 默认是向右的箭头-->
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/homepage_right_arrow" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp">
                            <TextView
                                android:id="@+id/admin_self_info_introduction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:textSize="16sp"
                                android:text="简介"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</LinearLayout>